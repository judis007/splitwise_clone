<%= form_with url: "/groups/#{@group_id}/expenses", method: "post" do |f| %>

    <%= f.label "Category: " %>
    <%= f.select :category, @categories %><br><br>

    <%= f.label "Currency: " %>
    <%= f.select :currency, currency_codes %><br><br>

    <%= f.label "Name the expense: " %>
    <%= f.text_field :name, placeholder: "Give a random name", class: 'form-control' %><br>

    <%= f.label "Total amount: " %>
    <%= f.number_field :expense, class: 'form-control' %><br>

    <%= f.label "Paid by: " %>
    <%= f.collection_select :friend, @friends, :id, :name, class: 'form-control' %><br>

    <%= f.submit %>
<% end %>